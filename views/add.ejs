    <div id="body1">
        <div id="div4">
        <form id="form2" action="/add" method="post" enctype="multipart/form-data">
            <label class="label2">Car Name:</label>
            <input class="input2" type="text" name="car_name" required>
           
            <label class="label2">Company:</label>
            <input class="input2"  type="text" name="company" required>
           
            <label class="label2">Car Year:</label>
            <select name="car_year" required>
                <% for (let year = 2000; year <= 2024; year++) { %>
                    <option value="<%= year %>"><%= year %></option>
                <% } %>
            </select>
            <br>
            <label class="label2">Model:</label>
            <select name="model" required>
                <option  value="AWD">AWD (All-Wheel Drive)</option>
                <option   value="FWD">FWD (Front-Wheel Drive)</option>
                <option   value="4x4">4x4</option>
                <option value="RWD">RWD (Rear-Wheel Drive)</option>
            </select>
           
            <label class="label2">Color:</label>
            <input class="input2"  type="text" name="colour" required>
          
            <label class="label2">Vin Number:</label>
            <input class="input2"  type="number" name="vin_no" required>
            
            <label class="label2">Car Price:</label>
            <input class="input2"  type="number" name="car_price" required>
            
            <label class="label2">Engine:</label>
            <input class="input2"  type="text" name="engine" required>
            
            <label class="label2">Vehicle Type:</label>
            <select name="type" required>
                <option value="sedan">Sedan</option> 
                <option value="full_suv">Full Size SUV</option> 
                <option value="mid_suv">Mid Size SUV</option> 
                <option value="compact_suv">Compact SUV</option> 
                <option value="coupe">Coupe</option> 
                <option value="station_wagon">Station Wagon</option>
                <option value="hatchback">HatchBack</option>
            </select>
            <br>
            <label class="label2">Pre-owned:</label>
            <select name="pre_owned" required>
                <option value="yes">Yes</option> 
                <option value="no">No</option>  
            </select>
            <br>
            <label class="label2">Fuel Type:</label>
            <select name="fuel_type" required>
                <option value="diesel">Diesel</option> 
                <option value="hybrid">Hybrids</option> 
                <option value="plugin_hybrid">Plugin Hybrids</option> 
                <option value="electric">Electric</option> 
                <option value="petrol">Petrol</option> 
            </select>
            <br>
            <label class="label2">Additional Comments:</label>
            <input class="input2"  type="text" name="extra">
            
            <label class="label2">Add Picture:</label>
            <input class="input2"  type="file" name="file" required>
         <br>
            <label class="label2">Financing:</label>
            <select name="financing" required>
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
          <br>
            <input class="input2"  type="hidden" name="sale" value="For sale">
            <button id="btn3" type="submit">Upload Data</button>
